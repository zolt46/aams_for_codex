# Base profile (copy to .env.local or .env.production)
AAMS_ENV=production
PORT=3000
DATABASE_URL=postgres://user:pass@db.example.com:5432/aams

# CORS (space or comma separated HTTPS origins)
CORS_ALLOW_ORIGINS=https://<user>.github.io https://tab.example.com

# Public URLs
PUBLIC_API_BASE=https://aams-api.example.com
ROBOT_EVENT_URL=https://aams-api.example.com/api/robot/event

# Fingerprint bridge tokens
FP_SITE_TOKEN=replace-with-random-token
LOCAL_BRIDGE_URL=https://your-tunnel.example.com
LOCAL_BRIDGE_TOKEN=optional-shared-secret

# Session cookies (optional)
SESSION_COOKIE_ENABLED=1
SESSION_COOKIE_NAME=aams_session
SESSION_COOKIE_DOMAIN=tab.example.com
SESSION_COOKIE_PATH=/
SESSION_COOKIE_SAMESITE=none
SESSION_COOKIE_SECURE=1
SESSION_COOKIE_HTTP_ONLY=1
SESSION_COOKIE_MAX_AGE=604800000
